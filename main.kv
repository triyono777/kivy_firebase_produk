ScreenManager:
    MainScreen:
    ProdukScreen:

<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Lihat Produk"
            on_release: app.root.current = 'produk'
        Button:
            text: "Tambah Produk"
            on_release: app.root.current = 'produk'

<ProdukScreen>:
    name: 'produk'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Tambah Produk"
            on_release: root.add_produk('Laptop', '10000')
        Button:
            text: "Lihat Produk"
            on_release: root.get_produk()
        Button:
            text: "Kembali"
            on_release: app.root.current = 'main'
