<ProdukScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Tambah Produk"
            on_release: root.add_produk('Laptop', '10000000')
        ScrollView:
            GridLayout:
                id: produk_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
        Button:
            text: "Lihat Produk"
            on_release: root.get_produk()
        Button:
            text: "Kembali"
            on_release: app.root.current = 'main'
